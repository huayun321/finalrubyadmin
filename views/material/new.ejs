<% include ../header %>
<script src="/javascripts/util_image.js"></script>
<!--socket io-->
<script src="/socket.io/socket.io.js"></script>
<script src="/socket.io-stream.js"></script>

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">

                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> 控制台
                    </li>
                    <li class="active">
                        <i class="fa fa-edit"></i> <%= title %>
                    </li>

                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <% if (message.success) { %>
                <div class="alert alert-success alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%=message.success%>
                </div>
                <% } %>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">



                    <div class="form-group">
                        <label for="tags">图片标签：</label>
                        <input type="text" class="form-control" id="tags" placeholder="标签1 标签2">
                    </div>
                    <div class="form-group">
                        <label for="files">选择图片：</label>
                        <input type="file" id="files" name="uploads" multiple="multiple">
                        <p class="help-block">不建议选择过多图片</p>
                    </div>

                    <button id="post"  class="btn btn-default">上传</button>


                <p id="progress"></p>
                <div id="img_box"></div>


            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->

<% include ../footer %>